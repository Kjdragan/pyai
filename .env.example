# Environment variables for Pydantic-AI Multi-Agent System
# Copy this file to .env and fill in your API keys

# Required API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
TAVILY_API_KEY=your_tavily_api_key_here
OPENWEATHER_API_KEY=your_openweather_api_key_here

# Model Settings
DEFAULT_MODEL=gpt-4.1-mini
ORCHESTRATOR_MODEL=gpt-4.1-mini

# Individual Agent Models
YOUTUBE_MODEL=gpt-4.1-mini
WEATHER_MODEL=gpt-4.1-mini
RESEARCH_MODEL=gpt-4.1-mini
REPORT_MODEL=gpt-4.1-mini

# Agent Settings
MAX_RETRIES=3
REQUEST_TIMEOUT=30

# Research Settings
MAX_RESEARCH_RESULTS=10
RESEARCH_TIMEOUT=60

# Streamlit Settings
STREAMLIT_PORT=8501
STREAMLIT_HOST=localhost

# Weather Settings
WEATHER_UNITS=metric
WEATHER_LANG=en

# Logfire Settings (optional - for observability and tracing)
LOGFIRE_READ_TOKEN=your_logfire_read_token_here
LOGFIRE_PROJECT_NAME=pyai
LOGFIRE_ORG_NAME=your_logfire_org_name_here
LOGFIRE_TOKEN=your_logfire_write_token_here
